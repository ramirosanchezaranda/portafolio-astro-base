<button id="toggle-dark-mode" class="toggle-mode-btn" aria-label="Switch to dark mode">Modo Oscuro</button>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const toggleButton = document.getElementById("toggle-dark-mode");

    if (toggleButton) {
      toggleButton.addEventListener("click", function() {
        document.body.classList.toggle("dark-mode");
        this.textContent = document.body.classList.contains("dark-mode") ? "Modo Claro" : "Modo Oscuro";
        this.setAttribute("aria-label", document.body.classList.contains("dark-mode") ? "Switch to light mode" : "Switch to dark mode");
      });
    }
    

    // Aplicar una transición suave al cambiar el modo oscuro
    const body = document.body;
    body.style.transition = "background-color 2.9s ease, color 2.9s ease";
  });
</script>

<style>
/* Fuente Apple y estilos generales */
body {
  margin: 0;
  font-family: 'Instrument Sans', sans-serif;
  color: #333;
  transition: background-color 0.3s, color 0.3s;
}

.profile-card {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20px;
  background-color: #f9ffeb;
  border-radius: 15px;
}

@media (min-width: 768px) {
  .profile-card {
    flex-direction: row;
  }
}

.left-panel {
  width: 100%;
  text-align: center;
  background-color: #ffffff;
  padding: 20px;
  box-sizing: border-box;
  border-radius: 15px;
}

@media (min-width: 768px) {
  .left-panel {
    width: 40%;
  }
}

.profile-picture {
  position: relative;
  width: 100%;
  max-width: 300px;
  margin: 0 auto;
}
.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 120%;
  height: 100%;
  border-radius: 10px;
  z-index: 1;
  opacity: 0.6;
}
.profile {
  position: relative;
  width: 80%;
  height: auto;
  border-radius: 10px;
  z-index: 2;
}

h1 {
  font-size: 1.8rem;
  margin-top: 15px;
  font-weight: bold;
  color: #2b2b2b;
}
p {
  font-size: 1rem;
  color: #333;
}
.social-icons {
  margin-top: 20px;
}
.social-icons a {
  margin: 0 10px;
  display: inline-block;
}
.social-icons a img {
  width: 24px;
  height: 24px;
}
.right-panel {
  width: 100%;
  padding: 20px;
  background-color: #e3f4d7;
  box-sizing: border-box;
  margin-top: 20px;
  border-radius: 15px;
}

@media (min-width: 768px) {
  .right-panel {
    width: 55%;
    margin-top: 0;
  }
}

.about-me h2 {
  font-size: 1.8rem;
  font-weight: bold;
}
.about-me p {
  margin-top: 15px;
}
.education, .experience {
  margin-top: 20px;
}
h3 {
  font-size: 1.5rem;
  margin-bottom: 10px;
}


.resume-btn {
  margin-top: 20px;
  padding: 10px 20px;
  font-size: 1rem;
  border: 2px solid #333;
  background-color: #ffffff;
  cursor: pointer;
  transition: background-color 0.3s ease;
}
.resume-btn:hover {
  background-color: #333;
  color: #fff;
}

/* Modo oscuro */
body.dark-mode {
  background-color: #1e1e1e;
  color: #e2dada;
}

body.dark-mode .profile-card p{
  background-color: #2b2b2b;
  color:#e2dada
}
body.dark-mode .profile-card {
  background-color: #2b2b2b;
}
body.dark-mode .profile-card p {
  background-color: #333;
}

body.dark-mode .left-panel {
  background-color: #333;
  color: #e0e0e0;
}

body.dark-mode .right-panel {
  background-color: #333;
  color: #e0e0e0;
}

body.dark-mode h1, body.dark-mode h2, body.dark-mode h3 {
  color: #f5f5f5;
}

body.dark-mode .about-me p,
body.dark-mode .education p,
body.dark-mode .experience p {
  color: #e2dada;
}

body.dark-mode .social-icons a img {
  filter: invert(1);
}

body.dark-mode .resume-btn {
  background-color: #555;
  color: #e0e0e0;
  border-color: #e0e0e0;
}

body.dark-mode .resume-btn:hover {
  background-color: #e0e0e0;
  color: #1e1e1e;
}

/* Botón de cambio de modo oscuro */
.toggle-mode-btn {
  position: fixed;
  bottom: 20px;
  right: 20px;
  padding: 10px 20px;
  font-size: 1rem;
  color: #333;
  background-color: #f0f0f0;
  border: 2px solid #333;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.toggle-mode-btn:hover {
  background-color: #333;
  color: #f0f0f0;
}

@media (max-width: 768px) {
  h1 { font-size: 1.5rem; }
  .about-me h2, h3 { font-size: 1.3rem; }
  .resume-btn { padding: 8px 16px; font-size: 0.9rem; }
}

@media (max-width: 480px) {
  .profile-picture { max-width: 200px; }
  .social-icons a img { width: 20px; height: 20px; }
  p, .about-me p { font-size: 0.9rem; }
}

/* Redondear los botones */
.resume-btn, .toggle-mode-btn {
  border-radius: 20px; /* Ajusta el valor según lo redondeado que deseas */
}

</style>
