<!-- Bot칩n para cambiar el modo oscuro -->
<button id="toggle-dark-mode" class="toggle-mode-btn">Modo Oscuro</button>

<!-- C칩digo JavaScript para el bot칩n -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const toggleButton = document.getElementById("toggle-dark-mode");

    if (toggleButton) {
      toggleButton.addEventListener("click", function() {
        document.body.classList.toggle("dark-mode");
        this.textContent = document.body.classList.contains("dark-mode") ? "Modo Claro" : "Modo Oscuro";
      });
    }
  });
</script>

<style>
/* Estilos b치sicos */
.profile-card {
  display: flex;
  justify-content: space-between;
  padding: 20px;
  background-color: #f2ffe0;
}

.left-panel {
  width: 40%;
  text-align: center;
  background-color: #fff;
  padding: 20px;
}
.profile-picture {
  position: relative;
  width: 100%;
  max-width: 300px;
  margin: 0 auto;
}

.profile {
  position: relative;
  width: 80%;
  height: auto;
  border-radius: 10px;
  z-index: 2;
}

h1 { font-size: 2rem; margin-top: 15px; font-weight: bold; }
p { font-size: 1rem; color: #333; }
.social-icons { margin-top: 20px; }
.social-icons a { margin: 0 10px; display: inline-block; }
.social-icons a img { width: 24px; height: 24px; }

.right-panel {
  width: 55%;
  padding: 20px;
  background-color: #dcf9b0;
}
.about-me h2 { font-size: 2rem; font-weight: bold; }
.about-me p { margin-top: 15px; }
.education, .experience { margin-top: 20px; }
h3 { font-size: 1.5rem; margin-bottom: 10px; }

.resume-btn {
  margin-top: 20px;
  padding: 10px 20px;
  font-size: 1rem;
  border: 2px solid #000;
  background-color: #fff;
  cursor: pointer;
  transition: background-color 0.3s ease;
}
.resume-btn:hover {
  background-color: #000;
  color: #fff;
}

/* Estilos para el modo oscuro */
body.dark-mode {
  background-color: #333;
  color: #f2ffe0;
}

body.dark-mode .left-panel {
  background-color: #444;
  color: #f2ffe0;
}

body.dark-mode .right-panel {
  background-color: #555;
  color: #f2ffe0;
}

body.dark-mode .resume-btn {
  background-color: #555;
  color: #f2ffe0;
  border-color: #f2ffe0;
}

body.dark-mode .resume-btn:hover {
  background-color: #f2ffe0;
  color: #333;
}
</style>
